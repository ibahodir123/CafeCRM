<Application x:Class="CafeCrm.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:CafeCrm.App.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#2C5AA0" />
            <SolidColorBrush x:Key="NewCustomerColor" Color="#2196F3" />
            <SolidColorBrush x:Key="RegularCustomerColor" Color="#4CAF50" />
            <SolidColorBrush x:Key="VIPCustomerColor" Color="#FF9800" />
            <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50" />
            <SolidColorBrush x:Key="ErrorColor" Color="#F44336" />
            <SolidColorBrush x:Key="WarningColor" Color="#FF9800" />
            <SolidColorBrush x:Key="InfoColor" Color="#2196F3" />
            <SolidColorBrush x:Key="TableWithCheckColor" Color="#2E7D32" />
            <SolidColorBrush x:Key="TableWithoutCheckColor" Color="#F9A825" />

            <Style x:Key="TouchButton" TargetType="Button">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="Padding" Value="25,20" />
                <Setter Property="MinWidth" Value="120" />
                <Setter Property="MinHeight" Value="80" />
                <Setter Property="Margin" Value="8" />
                <Setter Property="Background" Value="{StaticResource PrimaryAccentBrush}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>

            <Style x:Key="TouchTextBox" TargetType="TextBox">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="MinHeight" Value="60" />
                <Setter Property="Margin" Value="0,0,12,0" />
            </Style>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityCollapsedConverter" CollapseWhenEmpty="True" />
            <converters:InverseStringToVisibilityConverter x:Key="InverseStringToVisibilityConverter" CollapseWhenVisible="True" />
            <converters:NotificationTypeToBrushConverter x:Key="NotificationTypeToBrushConverter" />
            <converters:BoolToTableColorConverter x:Key="BoolToTableColorConverter" />
            <converters:BoolToCheckStatusConverter x:Key="BoolToCheckStatusConverter" />
            <converters:BoolToVisitTypeConverter x:Key="BoolToVisitTypeConverter" />
            <converters:LoyaltyTierToBrushConverter x:Key="LoyaltyTierToBrushConverter" />
            <converters:EventTypeToColorConverter x:Key="EventTypeToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
