<UserControl x:Class="CafeCrm.App.Views.VisitDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20"
          Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Детали визита"
                   FontSize="26"
                   FontWeight="Bold"
                   Margin="0,0,0,16" />

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Background="White"
                        Padding="16"
                        CornerRadius="8"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Клиент"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Text="Имя:"
                                       FontWeight="SemiBold"
                                       Margin="0,0,10,5" />
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       Text="{Binding Visit.CustomerName}" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="Телефон:"
                                       FontWeight="SemiBold"
                                       Margin="0,0,10,5" />
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       Text="{Binding Visit.CustomerPhone, TargetNullValue='Не указан'}" />

                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Text="Стол:"
                                       FontWeight="SemiBold"
                                       Margin="0,0,10,0" />
                            <TextBlock Grid.Row="2"
                                       Grid.Column="1"
                                       Text="{Binding Visit.TableNumber}" />
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="White"
                        Padding="16"
                        CornerRadius="8"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Заказ"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" />
                        <ItemsControl ItemsSource="{Binding Visit.OrderItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8,4"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Name}"
                                                       VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Quantity}"
                                                       Margin="10,0,0,0"
                                                       VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="2"
                                                       Text="×"
                                                       Margin="5,0"
                                                       VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding Price, StringFormat='{}{0:C}'}"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border Background="#F5F5F5"
                                Padding="10"
                                CornerRadius="5"
                                Margin="0,10,0,0">
                            <Grid>
                                <TextBlock Text="{Binding Visit.ItemCount, StringFormat='Позиций: {0}'}"
                                           FontWeight="SemiBold" />
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                    <TextBlock Text="Итого:"
                                               FontWeight="Bold"
                                               Margin="0,0,6,0" />
                                    <TextBlock Text="{Binding Visit.TotalAmount, StringFormat='{}{0:C}'}"
                                               FontWeight="Bold"
                                               FontSize="16" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Background="White"
                        Padding="16"
                        CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Дополнительно"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10" />
                        <TextBlock Text="{Binding Visit.Notes, TargetNullValue='Примечаний нет'}"
                                   TextWrapping="Wrap"
                                   FontStyle="Italic" />
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,10,0,0">
                            <TextBlock Text="Начало:"
                                       FontWeight="SemiBold"
                                       Margin="0,0,5,0" />
                            <TextBlock Text="{Binding Visit.StartedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" />
                            <TextBlock Text="Длительность:"
                                       FontWeight="SemiBold"
                                       Margin="20,0,5,0" />
                            <TextBlock Text="{Binding Visit.DurationDisplay}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,6,0,0">
                            <TextBlock Text="Тип:"
                                       FontWeight="SemiBold"
                                       Margin="0,0,5,0" />
                            <TextBlock Text="{Binding Visit.IsTakeaway, Converter={StaticResource BoolToVisitTypeConverter}}" />
                            <TextBlock Text="POS чек:"
                                       FontWeight="SemiBold"
                                       Margin="20,0,5,0" />
                            <TextBlock Text="{Binding Visit.PosCheckId, TargetNullValue='Не привязан'}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Закрыть"
                    Style="{StaticResource TouchButton}"
                    Command="{Binding CloseCommand}" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" />
            <Button Content="Завершить визит"
                    Style="{StaticResource TouchButton}"
                    Margin="10,0,0,0"
                    Command="{Binding CloseVisitCommand}" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" />
        </StackPanel>

        <Border Grid.RowSpan="3"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ProgressBar Width="200"
                             Height="12"
                             IsIndeterminate="True" />
                <TextBlock Text="Загрузка..."
                           Foreground="White"
                           FontSize="16"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
