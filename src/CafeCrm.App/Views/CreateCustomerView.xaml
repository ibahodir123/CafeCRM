<Window x:Class="CafeCrm.App.Views.CreateCustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый гость"
        Height="520"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Добавить гостя"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20" />

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Имя *"
                           FontSize="14"
                           FontWeight="SemiBold" />
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TouchTextBox}"
                         Margin="0,4,0,12" />

                <TextBlock Text="Телефон"
                           FontSize="14"
                           FontWeight="SemiBold" />
                <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TouchTextBox}"
                         Margin="0,4,0,12" />

                <TextBlock Text="Email"
                           FontSize="14"
                           FontWeight="SemiBold" />
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TouchTextBox}"
                         Margin="0,4,0,12" />

                <TextBlock Text="Дата рождения"
                           FontSize="14"
                           FontWeight="SemiBold" />
                <DatePicker SelectedDate="{Binding BirthDate}"
                            FontSize="16"
                            Height="40"
                            Margin="0,4,0,12" />

                <TextBlock Text="Предпочтения"
                           FontSize="14"
                           FontWeight="SemiBold" />
                <TextBox Text="{Binding Preferences}"
                         Style="{StaticResource TouchTextBox}"
                         AcceptsReturn="True"
                         MinHeight="60"
                         Margin="0,4,0,12" />
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Заполните обязательные поля *"
                       Foreground="Red"
                       FontSize="12"
                       Margin="0,0,0,8"
                       Visibility="{Binding HasValidationErrors, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="Отмена"
                        Style="{StaticResource TouchButton}"
                        Command="{Binding CancelCommand}" />
                <Button Content="Сохранить"
                        Style="{StaticResource TouchButton}"
                        Command="{Binding CreateCustomerCommand}"
                        Margin="10,0,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
