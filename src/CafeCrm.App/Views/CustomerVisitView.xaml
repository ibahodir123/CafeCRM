<Window x:Class="CafeCrm.App.Views.CustomerVisitView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление визита"
        Height="520"
        Width="540"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Оформление визита"
                   FontSize="26"
                   FontWeight="Bold"
                   Margin="0,0,0,16" />

        <Border Grid.Row="1"
                Background="White"
                Padding="20"
                CornerRadius="10"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
            <StackPanel>
                <TextBlock Text="{Binding Customer.Name}"
                           FontSize="20"
                           FontWeight="Bold" />
                <TextBlock Text="{Binding Customer.Phone, TargetNullValue='Телефон не указан'}"
                           FontSize="16"
                           Opacity="0.8"
                           Margin="0,2,0,10" />
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,12">
                    <TextBlock Text="Статус POS:"
                               FontSize="14"
                               FontWeight="SemiBold" />
                    <TextBlock Text="{Binding PosCheckId, StringFormat=' Чек {0}'}"
                               FontSize="14"
                               Margin="8,0,0,0"
                               Visibility="{Binding PosCheckId, Converter={StaticResource StringToVisibilityConverter}}" />
                    <TextBlock Text="Ожидание чека"
                               FontSize="14"
                               Opacity="0.6"
                               Margin="8,0,0,0"
                               Visibility="{Binding PosCheckId, Converter={StaticResource InverseStringToVisibilityConverter}}" />
                </StackPanel>

                <TextBlock Text="Номер стола *"
                           FontSize="14"
                           FontWeight="SemiBold" />
                <TextBox Text="{Binding TableNumber, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource TouchTextBox}"
                         Margin="0,4,0,12" />

                <TextBlock Text="Примечания"
                           FontSize="14"
                           FontWeight="SemiBold" />
                <TextBox Text="{Binding Notes}"
                         Style="{StaticResource TouchTextBox}"
                         AcceptsReturn="True"
                         MinHeight="80"
                         Margin="0,4,0,12" />

                <CheckBox Content="Навынос"
                          IsChecked="{Binding IsTakeaway}"
                          FontSize="16" />
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                Background="#FFF44336"
                CornerRadius="6"
                Padding="10"
                Margin="0,12,0,0"
                Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityCollapsedConverter}}">
            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="White"
                       TextWrapping="Wrap" />
        </Border>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Отмена"
                    Style="{StaticResource TouchButton}"
                    Command="{Binding CancelCommand}"
                    Background="#F44336"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />
            <Button Content="Начать визит"
                    Style="{StaticResource TouchButton}"
                    Command="{Binding StartVisitCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                    Margin="10,0,0,0" />
        </StackPanel>

        <Border Grid.RowSpan="4"
                Background="#88000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ProgressBar Width="220"
                             Height="12"
                             IsIndeterminate="True" />
                <TextBlock Text="Сохранение..."
                           Foreground="White"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
