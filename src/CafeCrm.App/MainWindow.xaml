<Window x:Class="CafeCrm.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cafe CRM"
        Height="720"
        Width="1200"
        Background="#FFF7F7F7"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ContentControl x:Name="ShellContent" />

        <ItemsControl x:Name="ToastContainer"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="16"
                      Width="320">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding Type, Converter={StaticResource NotificationTypeToBrushConverter}}"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0,0,0,8"
                            Opacity="0.95">
                        <StackPanel>
                            <TextBlock Text="{Binding Message}"
                                       Foreground="White"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       TextWrapping="Wrap" />
                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}"
                                       Foreground="#F0F0F0"
                                       FontSize="11"
                                       HorizontalAlignment="Right" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
